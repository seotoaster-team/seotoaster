				<a style="float:left;margin-right: 10px;" data-url="<?php echo $this->toasterLink('user', 'load', '', null, true); ?>" data-eid="<?php echo $user->getId(); ?>" href="javascript:;" class="_tedit"><img src="<?php echo $this->websiteUrl; ?>system/images/edit.png" alt="edit"/></a>
