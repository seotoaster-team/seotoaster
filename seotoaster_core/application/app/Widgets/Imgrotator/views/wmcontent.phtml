<script type="text/javascript">
	$(function() {
        $(document).on('blur', '#rotator-thumb-width', function() {
            $('#rotator-thumb-height').val($(this).val());
        }).on('change', '#rotator-slideshow', function(){
                var filedSlider = $('#imgrotator-widget-form').find('.slider-field input, .slider-field select');
                if(filedSlider.is(':disabled')){
                    filedSlider.prop('disabled', false);
                }else{
                    filedSlider.prop({
                        'disabled': true,
                        'checked': false
                    }).not('input').val('none');
                }
            });
    });
</script>